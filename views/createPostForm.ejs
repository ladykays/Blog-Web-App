<%- include("partials/header.ejs") %>

<main class="flex-grow">
  <div class="bg-white shadow-sm pb-20">
    <!-- Hero Section -->
    <section class="bg-gray-900 text-white py-24">
      <div class="container mx-auto px-8 text-center">
        <h1 class="text-5xl lg:text-6xl font-display font-bold mb-9">
          Create a New <span class="text-teal-400">Post</span>
        </h1>
        <p class="text-2xl max-w-2xl mx-auto text-gray-300">
          Share your insights and experiences with our community
        </p>
      </div>
    </section>
       
    <section class="py-20">
      <div class="container mx-auto px-8">
        <div class="max-w-3xl mx-auto">
          <form action="/posts/createPost" method="POST" class="bg-white rounded-lg shadow-md p-8">
            <div class="mb-6">
              <label for="title" class="block text-gray-700 text-xl font-bold mb-4">Post Title <span class="text-red-700">*</span></label>
              <input type="text" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-teal-400" id="title" name="title" required placeholder="Enter post title">
            </div>
            <div class="mb-3">
              <label for="category" class="block text-gray-700 text-xl font-bold mb-4">Category</label>
              <select id="category" name="category" class="form-control">
                <option value="" disabled selected>Select a category</option>
                <option value="family">Family</option>
                <option value="finance">Finance</option>
                <option value="health">Health</option>
                <option value="home">Home</option>
                <option value="lifestyle">Lifestyle</option>
                <option value="mindfulness">Mindfulness</option>
                <option value="parenting">Parenting</option>
                <option value="personal-development">Personal Development</option>
                <option value="productivity">Productivity</option>
                <option value="relationships">Relationships</option>
                <option value="self-care">Self Care</option>
                <option value="work-life-balance">Work-Life Balance</option>
              </select>
            </div>
            <div class="mb-3">
              <label for="image" class="block text-gray-700 text-xl font-bold mb-4">Cover Image URL</label>
              <input type="url" class="form-control" id="image" name="image" placeholder="https://example.com/image.jpg">
            </div>
            <!-- <div class="mb-3">
              <label for="excerpt" class="form-label">Excerpt</label>
              <input type="text" class="form-control" id="excerpt" name="excerpt" required placeholder="Brief summary of the post">
            </div> -->
            <div class="mb-3">
              <label for="content" class="block text-gray-700 text-xl font-bold mb-4">Post Content <span class="text-red-700">*</span></label>
              <textarea class="form-control" id="content" name="content" rows="5" required placeholder="Write your post content here..."></textarea>
            </div>
            <div class="mt-5">
              <button type="submit" class="btn btn-warning btn-lg publish-btn">Publish Post</button>
              <button type="submit" class="btn btn-outline-warning btn-lg">Save as Draft</button>
            </div>
            
          </form>
        </div>
        
      </div>
    </section>
  </div>
  
</main>

<%- include("partials/footer.ejs") %>