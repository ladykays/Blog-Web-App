
<div className="flex flex-col min-h-screen bg-off-white">
  <%- include("partials/header.ejs") %>

<section class="hero flex-grow">
  <div class="container mx-auto d-flex justify-content-between align-items-center">
    
      <div class="hero-text-content">
        <h1>The <span class="teal">Unpayed </span>CEO</h1>
        <p class="tagline">
          Empowering women to lead their lives and businesses with confidence,
          while balancing the demands of career, family, and self-care.
        </p>
        <div class="hero-button d-flex justify-content-left">
          <a href="/createPostForm" type="button" class="btn btn-warning btn-lg"
            >Create Post</a
          >
          <a
            href="/"
            type="button"
            class="btn btn-outline-warning btn-lg hero-outline-btn ml-4"
            >Explore Resources</a
          >
        </div>
      </div>
      <div class="w-50 hero-image p-5">
        <img src="/images/mum.jpg " alt="hero tagline" />
      </div>
    
  </div>
</section>
<section class="featured-posts">
  <div class="container-fluid w-75 mx-auto ">
    <div class="d-flex justify-content-between align-items-center flex-row">
      <h2>Featured <span class="teal">Posts</span></h2>
      <a href="/posts" class="view-all">View all posts →</a>
    </div>
    <%- include("partials/blogCard.ejs", {
      posts: posts,
      showActions: false,
      showReadMore: true,
      isHyperlink: false,
    }) %> 
  </div>
</section>
<section class="d-flex justify-content-center align-items-center flex-column newsletter">
  <h2>Join our <span class="unpaid">Newsletter</span></h2>
  <p class="content">Get weekly tips, resources, and inspiration delivered straight to your inbox.
  </p>
  <form action="/subscribe" method="POST" class="newsletter-form">
    <div class="d-flex flex-row">
      <input
      type="email"
      name="email"
      placeholder="Enter your email address"
      class="form-control w-75 mr-2"
    />
    <button type="submit" class="btn btn-warning-sm w-75">Subscribe Now</button>
    </div> 
  </form>
</section>
<section class="cards">
  <div class="container-fluid w-75 mx-auto ">
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <div class="col">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title">About Us</h5>
            <p class="card-text">Learn more about our mission and the story behind The Unpaid CEO.</p>
            <p class="card-link">Read our story →</p>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title">Free Resources</h5>
            <p class="card-text">Access our library of free guides, printables, and tools to help you thrive.
  
            </p>
            <p class="card-link">Browse resources →</p>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title">Get in Touch</h5>
            <p class="card-text">Questions or collaboration ideas? We'd love to hear from you.</p>
            <p class="card-link">Contact us →</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  
</section>


  <%- include("partials/footer.ejs") %>
</div>

