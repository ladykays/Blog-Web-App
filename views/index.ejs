<%- include("partials/header.ejs") %>

<main class="flex-grow">
  <div class="w-full">
    <!-- Hero Section -->
    <section class="bg-gray-800 text-white py-20">
      <div class="container flex max-w-screen-xl mx-auto px-4">
        <div class="w-1/2 my-auto">
          <h1
            class="text-8xl md:text-5xl font-display font-extrabold mb-8 tracking-wider"
          >
            The <span class="text-teal-400">Unpayed </span>CEO
          </h1>
          <p class="text-3xl/10 mb-8 text-gray-200 font-light tracking-wide">
            Empowering women to lead their lives and businesses with confidence,
            while balancing the demands of career, family, and self-care.
          </p>
          <div class="flex flex-wrap gap-4">
            <a
              href="/createPostForm"
              class="bg-teal-400 hover:bg-teal-400/90 text-white text-xl px-6 py-3 rounded-md transition-colors"
              >Create Post</a
            >
            <a
              href="/"
              class="bg-transparent border-2 border-teal-400 hover:bg-teal-400/10 text-white text-lg px-6 py-3 rounded-md transition-colors"
              >Explore Resources</a
            >
          </div>
        </div>
        <div class="w-1/2 hero-image p-5">
          <img src="/images/hero-image.jpg " alt="hero tagline" />
        </div>
      </div>
    </section>
    <!-- Recent Posts Section -->
    <section class="bg-gray-100 text-gray-900 py-20">
      <div class="container mx-auto px-8">
        <div class="flex justify-between items-center mb-10">
          <h2 class="text-5xl font-display font-bold text-gray-900">
            Recent <span class="text-teal-400">Posts</span>
          </h2>
          <a
            href="/posts"
            class="flex items-center text-teal-400 hover:underline text-[1.5rem]"
            >View all posts →</a
          >
        </div>
        <%- include("partials/blogCard.ejs", { posts: posts, showActions: false,
        showReadMore: true, isHyperlink: false, }) %>
      </div>
    </section>
    <section class="py-20 bg-red-200/30">
      <div class="container mx-auto px-4">
        <div class="max-w-2xl mx-auto text-center">
          <h2 class="text-5xl font-display font-bold text-gray-800 mb-5">Join Our Newsletter</h2>
          <p class="text-gray-600 mb-10 text-xl">
            Get weekly tips, resources, and inspiration delivered straight to
            your inbox.
          </p>
          <form action="/subscribe" method="POST" class="flex flex-col sm:flex-row gap-3">
            
              <input
                type="email"
                name="email"
                placeholder="Enter your email address"
                class="flex-grow px-4 py-3 rounded-md border bg-white border-gray-300 focus:outline-none focus:ring-2 focus:ring-teal-400 text-[1.2rem]"
              />
              <button type="submit" class="bg-teal-400 hover:bg-teal-400/90 text-white text-[1.2rem] px-6 py-3 rounded-md transition-colors whitespace-nowrap">
                Subscribe Now
              </button>
            
          </form>
        </div>
      </div>
    </section>
    <section class="cards">
      <div class="container-fluid w-75 mx-auto">
        <div class="row row-cols-1 row-cols-md-3 g-4">
          <div class="col">
            <div class="card h-100">
              <div class="card-body">
                <h5 class="card-title">About Us</h5>
                <p class="card-text">
                  Learn more about our mission and the story behind The Unpaid
                  CEO.
                </p>
                <p class="card-link">Read our story →</p>
              </div>
            </div>
          </div>
          <div class="col">
            <div class="card h-100">
              <div class="card-body">
                <h5 class="card-title">Free Resources</h5>
                <p class="card-text">
                  Access our library of free guides, printables, and tools to
                  help you thrive.
                </p>
                <p class="card-link">Browse resources →</p>
              </div>
            </div>
          </div>
          <div class="col">
            <div class="card h-100">
              <div class="card-body">
                <h5 class="card-title">Get in Touch</h5>
                <p class="card-text">
                  Questions or collaboration ideas? We'd love to hear from you.
                </p>
                <p class="card-link">Contact us →</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <%- include("partials/footer.ejs") %>
    <!-- </div> -->
  </div>
</main>
