<%- include("partials/header.ejs") %>

<main class="flex-grow">
  <div class="w-full">
    <!-- Hero Section -->
    <section class="bg-gray-800 text-white py-20">
      <div class="container grid grid-cols-1 md:grid-cols-2 md:gap-8 mx-auto px-4">
        <div class="my-auto">
          <h1
            class="text-5xl md:text-7xl font-display font-extrabold mb-8 tracking-wider"
          >
            The <span class="text-teal-400">Unpayed </span>CEO
          </h1>
          <p class="text-3xl/10 mb-8 text-gray-200 font-light tracking-wide">
            Empowering women to lead their lives and businesses with confidence,
            while balancing the demands of career, family, and self-care.
          </p>
          <div class="flex flex-wrap gap-4">
            <a
              href="/createPostForm"
              class="bg-teal-400 hover:bg-teal-400/90 text-white text-xl px-6 py-3 rounded-md transition-colors"
              >Create Post</a
            >
            <a
              href="/"
              class="bg-transparent border-2 border-teal-400 hover:bg-teal-400/10 text-white text-lg px-6 py-3 rounded-md transition-colors"
              >Explore Resources</a
            >
          </div>
        </div>
        <div class="p-5">
          <img src="/images/hero-image.jpg " alt="hero tagline" class="hidden md:block w-full h-auto" />
        </div>
      </div>
    </section>
    <!-- Recent Posts Section -->
    <section class="bg-gray-100 text-gray-900 py-20">
      <div class="container mx-auto px-8">
        <div class="flex justify-between items-center mb-10">
          <h2 class="text-5xl font-display font-bold text-gray-900">
            Recent <span class="text-teal-400">Posts</span>
          </h2>
          <a
            href="/posts"
            class="flex items-center text-teal-400 hover:underline text-[1.5rem]"
            >View all posts →</a
          >
        </div>
        <%- include("partials/blogCard.ejs", { posts: posts, showActions: false,
        showReadMore: true, isHyperlink: false, }) %>
      </div>
    </section>
    <!-- Newsletter Section -->
    <section class="py-20 bg-red-200/30">
      <div class="container mx-auto px-4">
        <div class="max-w-2xl mx-auto text-center">
          <h2 class="text-5xl font-display font-bold text-gray-800 mb-5">
            Join Our Newsletter
          </h2>
          <p class="text-gray-600 mb-10 text-xl">
            Get weekly tips, resources, and inspiration delivered straight to
            your inbox.
          </p>
          <form
            action="/subscribe"
            method="POST"
            class="flex flex-col sm:flex-row gap-3"
          >
            <input
              type="email"
              name="email"
              placeholder="Enter your email address"
              class="flex-grow px-4 py-3 rounded-md border bg-white border-gray-300 focus:outline-none focus:ring-2 focus:ring-teal-400 text-[1.2rem]"
            />
            <button
              type="submit"
              class="bg-teal-400 hover:bg-teal-400/90 text-white text-[1.2rem] px-6 py-3 rounded-md transition-colors whitespace-nowrap"
            >
              Subscribe Now
            </button>
          </form>
        </div>
      </div>
    </section>
    <!-- About, Free Resources and Get in Touch tiles Section -->
    <section class="bg-gray-50 py-16">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="bg-white p-16 rounded-lg shadow-lg text-center">
            <h3 class="text-2xl font-bold text-gray-700 mb-4">About Us</h3>
            <p class="text-gray-600 text-xl mb-10">
              Learn more about our mission and the story behind The Unpaid CEO.
            </p>
            <a class="inline-flex items-center text-teal-400 text-2xl hover:underline"
              >Read our story →</a
            >
          </div>
          <div class="bg-white p-16 rounded-lg shadow-lg text-center">
            <h3 class="text-2xl font-bold text-gray-700 mb-4">Free Resources</h3>
            <p class="text-gray-600 text-xl mb-10">
              Access our library of free guides, printables, and tools to help
              you thrive.
            </p>
            <a class="inline-flex items-center text-teal-400 text-2xl hover:underline"
              >Browse resources →</a
            >
          </div>
          <div class="bg-white p-16 rounded-lg shadow-md text-center">
            <h3 class="text-2xl font-bold text-gray-700 mb-4">Get in Touch</h3>
            <p class="text-gray-600 text-xl mb-10">
              Questions or collaboration ideas? We'd love to hear from you.
            </p>
            <a class="inline-flex items-center text-teal-400 text-2xl hover:underline"
              >Contact us →</a
            >
          </div>
        </div>
      </div>
    </section>

    <%- include("partials/footer.ejs") %>
    <!-- </div> -->
  </div>
</main>
